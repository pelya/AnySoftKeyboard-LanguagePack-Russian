	<!-- keycode_O - щ, х -->
	<SequenceMapping keySequence="43,43" targetChar="&#x445;"/>
	<!-- keycode_p -  з, ъ -->
	<SequenceMapping keySequence="44,44" targetChar="&#x44C;"/>
	<!-- keycode_k - л, ж -->
	<SequenceMapping keySequence="39,39" targetChar="&#x436;"/>
	<!-- keycode_l - д, э -->
	<SequenceMapping keySequence="40,40" targetChar="&#x44D;"/>
	<!-- keycode_comma - б, ю -->
	<SequenceMapping keySequence="55,55" targetChar="&#x44E;"/>
