	<!-- keycode_leftbracket - х -->
	<SequenceMapping keySequence="71" targetChar="&#x445;"/>
	<!-- keycode_rightbracket - ъ -->
	<SequenceMapping keySequence="72" targetChar="&#x44C;"/>
	<!-- keycode_semicolon - ж -->
	<SequenceMapping keySequence="74" targetChar="&#x436;"/>
	<!-- keycode_apostrophe - э -->
	<SequenceMapping keySequence="75" targetChar="&#x44D;"/>
	<!-- keycode_comma - б, ю -->
	<SequenceMapping keySequence="55" targetChar="&#x431;"/>
	<!-- keycode_dot - ю -->
	<SequenceMapping keySequence="56" targetChar="&#x44E;"/>
